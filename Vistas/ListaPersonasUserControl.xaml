<UserControl x:Class="PersonasMensajes.Vistas.ListaPersonasUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonasMensajes.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListBox ItemsSource="{Binding Path=ListaPersonas}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <TextBlock >
                    <Run Text="{Binding Path=Nombre}"></Run>
                    <Run>-</Run>
                    <Run Text="{Binding Path=Edad}"></Run>
                    <Run>-</Run>
                    <Run Text="{Binding Path=Nacionalidad}"></Run>
                </TextBlock>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ListBox>
</UserControl>
